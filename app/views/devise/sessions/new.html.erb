<div class="section">
  <div class="container">
    <h2 class='title is-2 has-text-centered pb-4'>Log in</h2>

    <div class="columns is-centered">
      <div class="columns is-4">



        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="control">
            <label class='label'>Email</label>
            <%= f.input :email, wrapper: false, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class='label'>Password</label>
            <%= f.input :password, wrapper: false, required: true, input_html: { autocomplete: "current-password" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class='label'>Remember</label>
            <%= f.input :remember_me, wrapper: false, required: true, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit, "Log in" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= render "devise/shared/links" %>
          </div>
        </div>


        <% end %>

      </div>
    </div>
  </div>
</div>