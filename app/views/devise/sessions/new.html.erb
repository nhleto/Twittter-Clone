<div class="section">
  <div class="container">
    <h2 class='title is-2 has-text-centered pb-4'>Log in</h2>

    <div class="columns is-centered">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :email, wrapper: false, required: true, autofocus: true, input_html: { autocomplete: "email", class: 'input' }, label_html: { class: 'label' } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :password, wrapper: false, required: true, input_html: { autocomplete: "current-password", class: 'input' }, label_html: { class: 'label' } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable?%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit, "Log in", class: 'button is-info' %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= render "devise/shared/links" %>
          </div>
        </div>


        <% end %>

    </div>
  </div>
</div>