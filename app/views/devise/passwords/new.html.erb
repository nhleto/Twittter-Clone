<div class="section">
  <div class="container">
    <h2 class='title is-2 has-text-centered'>Forgot your password?</h2>

    <div class="columns is-centered">

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <%= f.input :email, required: true, input_html: { autocomplete: "email", class: 'input' }, label_html: { class: 'label' }, wrapper: false %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.button :submit, "Send me reset password instructions", class: 'button is-info' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
    <% end %>


  </div>
</div>
</div>